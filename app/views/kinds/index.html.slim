css:
 #templateindex .panel-title {font-size: 32px}
-title "Project Types" 
.container

  #templateindex.center-block
    h1 align="center" 
      strong.dk-aqua.super.text-uppercase Choose a Project Type
    .row.panel-row-800.center-block
      #accordion.panel-group
        .panel.panel-default.panel-templates
          .panel-heading
            table
              tr
                td
                  a data-parent="#accordion" data-toggle="collapse" href="#collapseOne" 
                    = image_tag 'https://s3-us-west-2.amazonaws.com/makeparty/app/template/16-sm.png', alt: 'Parties', width: '45px', :class =>'icon'
                td
                  .panel-title.heavy
                    a data-parent="#accordion" data-toggle="collapse" href="#collapseOne"  Parties
          #collapseOne.panel-collapse.collapse
            .panel-body
              - if @kinds.parties.blank?
                | Coming soon...
              - else
                ul.list-unstyled
                  - @kinds.parties.each do |k|
                    li
                      = link_to role_project_path(kind_id: k.id) 
                        = k.title
          
      .panel.panel-default.panel-templates
        .panel-heading
          table
            tr
              td
                a data-parent="#accordion" data-toggle="collapse" href="#collapseOne" 
                  = image_tag 'https://s3-us-west-2.amazonaws.com/makeparty/app/template/8-sm.png', alt: 'Parties', width: '40px'
              td
                .panel-title.heavy
                  a data-parent="#accordion" data-toggle="collapse" href="#collapseTwo"  Meal Deliveries
        #collapseTwo.panel-collapse.collapse
          .panel-body
            - if @kinds.meal_deliveries.blank?
              | Coming soon...
            - else
               ul.list-unstyled
                 - @kinds.meal_deliveries.each do |k|
                  li
                    = link_to role_project_path(kind_id: k.id) 
                      = k.title
          